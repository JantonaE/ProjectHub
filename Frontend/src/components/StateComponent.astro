---
import { isLineBreak } from "typescript";
import { getStateOfPPPO } from "../lib/lib";

const {state} = Astro.props;

const stateDB = await getStateOfPPPO(state);
let state1 = stateDB.state;
console.log(stateDB);
---


     <span
    class={state1 === "Done" ? "inline-flex items-center rounded-md bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20"
    : state1 === "Closed" ? "inline-flex items-center rounded-md bg-red-50 px-2 py-1 text-xs font-medium text-red-500 ring-1 ring-inset ring-red-600/10"
    : state1 == "In Progress" ? "inline-flex items-center rounded-md bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600 ring-1 ring-inset ring-gray-500/10"
    : state1 === "Canceled" ? "inline-flex items-center rounded-md bg-red-50 px-2 py-1 text-xs font-medium text-red-700 ring-1 ring-inset ring-red-600/10"
    : "inline-flex items-center rounded-md bg-blue-50 px-2 py-1 text-xs font-medium text-blue-700 ring-1 ring-inset ring-blue-700/10"
}
>{state1}</span>
   