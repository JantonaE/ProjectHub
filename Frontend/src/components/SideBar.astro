---
import Dropdown from '../components/Dropdown.jsx';
import { getUser, setUser } from '../lib/auth';
import { getCompanyById } from '../lib/lib';
import Logout from "../components/Logout.jsx";


//http://127.0.0.1:8000/Companies/Portfolios/65e846ee1a79848c6df345be
const url = "http://127.0.0.1:8000";
//const { userLogged, params, mapa } = Astro.props;
const userLogged = "";
//const company = "Indra";

let user = await getUser();
if(user == null){
  return Astro.redirect('/');
}
let company = await getCompanyById(user.company);
const companyCode=company.code; // Obtenerlo de la sesion
const companyId = user.company;

let data;
async function fetchPortfolios() {
    try {
      const response = await fetch(`${url}/Companies/Portfolios/${companyId}`);
      if (response.ok) {
        data = await response.json();
      } else {
        throw new Error('Error al obtener portfolios');
      }
    } catch (error) {
      console.error(error);
    }
  }

  await fetchPortfolios();
